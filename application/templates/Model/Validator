 */
class {$Validator} implements ValidatorInterface
{

  /**
   * Error messages
   * @var Array
   */
  private $messages = array();
  
  /**
   * Validate this {$Bean}
   * @param {$Bean} ${$bean}
   */
  public function validate(${$bean})
  {
    <block:field>
     $chain = new Zend_Validate();
       <block:validator>
     $chain->addValidator(new {$field.validator.construct} );
       </block:validator>
     if(!$chain->isValid( ${$bean}->{$field.getter}))
       $this->messages['{$field.simpleName}'] = $chain->getMessages();
     
   </block:field>  
     
     if(count($this->messages))
      throw new ValidatorException('Invalid Object',1,$this->messages);

  }
  
}



