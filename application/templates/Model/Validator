/**
 * Clase {$Validator} que representa una excepciÃ³n de objetos {$Bean}
 *
 * @category   Project
 * @package    Project_Models
 * @subpackage Project_Models_Validators
 * @copyright  {$copyright}
<block:benderSignature>
 * @copyright  {$benderSignature}
 * @author     zetta & chentepixtol
</block:benderSignature>
 * @version    {$version} SVN: $Revision$
 */
class {$Validator} implements ValidatorInterface
{

  /**
   * Error messages
   * @var Array
   */
  private $messages = array();
  
  /**
   * Validate this {$Bean}
   * @param {$Bean} ${$bean}
   */
  public function validate(${$bean})
  {
    <block:field>
     
     $chain = new Zend_Validate();
       <block:length>
     $chain->addValidator(new Zend_Validate_StringLength({$field.length.min},{$field.length.max}));
       </block:length>
       <block:email>
     $chain->addValidator(new Zend_Validate_EmailAddress());
       </block:email>
       <block:required>
     $chain->addValidator(new Zend_Validate_NotEmpty());
       </block:required>
       <block:zenddate>
     $chain->addValidator(new ZendDateValidate());
       </block:zenddate>
     if( !$chain->isValid( ${$bean}->{$field.getter}()) {$field.optional})
       $this->messages['{$field.simpleName}'] = $chain->getMessages();
   </block:field>
     
     
     if(count($this->messages))
      throw new ValidatorException('Invalid Object',1,$this->messages);

  }
  
}



